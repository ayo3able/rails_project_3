

<div class="bg-success"><h1>Project: <%= @project.title %></h1></div>
<br/>
<div><h4>Goal: <%= @project.goal %></h4></div>
<br/><br/>

<div><h6>Team: <%=link_to @project.team.name, team_path(@project.team)%></h6></div>
<br/>

 <br/>
   <div class ="card bg-warning" style="max-width: 50rem;">
  
  <h2 class="card-title text-center" >Tasks</h2>
 </div>
  <br/>
   <br/>
<% @project.tasks.each do |task| %>
 <div class ="card border-warning" style="max-width: 50rem;">
 <div class="card-header text-center"><%= task.title%></div>
<br/>
  <div class="card-body">
  <h6>Start Date:</h6>
  <p><%=task.start%></p>
  <br/>
  <h6>Deadline:</h6>
   <p><%=task.deadline%></p>
   <br/>
   <h6>Instructions:</h6>
  <p><%=task.instructions%></p></div>
  <div class="card-footer bg-transparent border-success">
<%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }%>
   </div>
<br/>
</div>
<div style="height: 10px;"></div>
<% end %>
<div class="card-footer bg-transparent border-success">
    <%= link_to "Add a Task", project_tasks_path(project_id: @project) %>
      <%= link_to 'Edit', edit_project_path %>
      <br/>
      <%= button_to 'Delete', project_path, method: :delete, data: { confirm: 'Are you sure?' }%>
     </div>
<br/>
  

