<div class ="card border-warning" style="max-width: 50rem;">
 <div class="card-header bg-warning text-center">
 <h3> Edit Task in <%= @task.project.title %> for <%= @task.project.team.name %> Project </h3></div>



<div class="card-body"></div>

<%= form_for(@task) do |f| %>
<%= f.label :title%>
 <%= f.text_field :title %><br/>
<%= f.label :start%>
 <%= f.date_select :start %><br/>
<%= f.label :deadline%>
 <%= f.date_select :deadline %><br/>
<%= f.label :instructions%>
 <%= f.text_area :instructions %><br/>
  <%= f.submit %>
<% end %>
</div>
</div>