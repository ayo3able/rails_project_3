  
  <div class="card">
  <div class="card-header bg-info">
    <ul class="nav nav-pills card-header-pills">
    
      <li class="nav-item">
      <h3 class="card-title"> <%= @team.name %></h3>
  </div>
  <div class="card-body">

    <%if @team.projects.any? %>
    <%@team.projects.each do |p|%>
      <h6><%=p.title%></h6>
      <h6><%=p.goal%></h6>
      <%end%>

       <%= link_to "Add a Project", new_team_project_path(@team) %>

    <%= link_to 'Edit', edit_team_path(@team) %>
   <br/>
   <br/>
    <%= button_to "Delete", team_path, method: :delete, data: { confirm: 'Are you sure?' }%>
      <%else%>

       
    <h3>No Projects for this Team Yet</h3>
    <%= link_to "New Project", new_team_project_path(@team) %>
    </div>
      <%end%>
    </div>